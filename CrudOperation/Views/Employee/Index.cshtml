
@{
    ViewBag.Title = "Employee List";
}

<h2>Employee CRUD Operations</h2>

<a class="btn btn-default" style="margin-bottom:10px" onclick="PopupForm('@Url.Action("AddorEdit", "Employee")')">Add New</a>
<table id="emplyeeTable" class="table table-striped table-bordered" style="width:100%;">
    <thead>
        <tr>
            <td>Name</td>
            <td>Position</td>
            <td>Office</td>
            <td>Age</td>
            <td>Salary</td>
        </tr>
    </thead>
</table>

<link rel="stylesheet" type="text/css" href="https://cdn.datatables.net/1.11.5/css/jquery.dataTables.css">

@section scripts{
    <link rel="stylesheet" type="text/css" href="https://cdn.datatables.net/v/bs/dt-1.11.5/datatables.min.css" />
    <script src="~/Scripts/Views/Employee.js"></script>
}

